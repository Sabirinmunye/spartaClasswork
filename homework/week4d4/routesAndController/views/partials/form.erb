<form action="/<%= @blogs[:id] %>" method="POST">
	<%if (@blogs[:id] !="") %>
		<input type="hidden" name="_method" value="PUT">
	<% end %>
	<label>Title</label>
		<input type="text" name="title" placeholder='Enter a title' value="<%= @blogs[:title] %>">
	</div>
	<div>
		<label>Content</label>
		<textarea name='content' placeholder="the content goes here"> <%= @blogs[:content] %> </textarea>
	</div>
	<div>
		<label>URL</label>
		<textarea name='URL' placeholder="URL goes here"> <%= @blogs[:url] %> </textarea>
	</div>
	<div>
		<input type="submit" value="save post">
	</div>
</form>